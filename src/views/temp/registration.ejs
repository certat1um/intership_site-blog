<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('./partials/head') %>
  <link rel="stylesheet" href="/form.css">
</head>
<body>
  <%- include('./partials/nav') %>

  <section class="main">
    <h1 style="text-align: center;">Registration form</h1>
    
    <form action="/registration" method="post" id="contact-form">
      <div class="form-info">
        <label>
        Name:
        <input type="text" name="name">
        </label>
        <label>
        Login:
        <input type="text" name="login">
        </label>
        <label>
        Password:
        <input type="password" name="password">
        </label>
        <label>
        Phone:
        <input type="text" name="phone">
        </label>
      </div>
      <div class="form-text">
        <label>About you:
        <textarea name="about"></textarea>
        </label>
      </div>
      <div class="form-replace-to-login">
        <span>Or <a href="/login">log in</a>.</span> 
      </div>
      <div class="form-button">
        <input type="submit" value="Register">
      </div>
      </form>

  </section>

</body>
</html>