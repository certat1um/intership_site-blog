<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('./partials/head') %>
  <link rel="stylesheet" href="/form.css">
</head>
<body>
  <%- include('./partials/nav') %>

    <section class="main">
      
      <h2 style="text-align: center;">Add new post form</h2>

        <form action="/new-post" method="post" id="contact-form">
            <div class="form-info">
              <label>Post Title
                <input type="text" name="title">
              </label>
            </div>
            <div class="form-text">
              <label>Post Text
                <textarea name="text"></textarea>
              </label>
            </div>
            <div class="form-button">
              <input type="submit" value="Post">
            </div>
          </form>

    </section>
</body>
</html>